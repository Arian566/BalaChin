<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/field_bg_new"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/img_khabar"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/field_bg_new" />

    <TextView
        android:id="@+id/tv_onvan_khabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_toLeftOf="@+id/img_khabar"
        android:text="عنوان خبر"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tv_matne_khabar"
        android:layout_width="@dimen/_195sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_onvan_khabar"
        android:layout_alignEnd="@+id/tv_onvan_khabar"
        android:visibility="gone"
        android:text=" چرا که سلام این یک خبر تستی برای چک کردن صحت آن است که می باشد و آن آیا"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tv_tarikh_khabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matne_khabar"
        android:layout_alignStart="@+id/tv_matne_khabar"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="1399/05/09"
        android:textSize="@dimen/font_size_micro" />

    <TextView
        android:id="@+id/tv_nevisande_khabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matne_khabar"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="گروه آرین"
        android:layout_alignEnd="@+id/tv_matne_khabar"
        android:textSize="@dimen/font_size_micro" />


</RelativeLayout>